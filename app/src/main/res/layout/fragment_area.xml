<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_gravity="center"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/fragmentAreaBedroom"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="16dp">
            <ImageView
                android:src="@drawable/img_bedroom"
                android:scaleType="centerCrop"
                android:layout_width="128dp"
                android:layout_height="160dp" />
            <TextView
                android:textSize="16sp"
                android:text="卧室"
                android:textColor="#000000"
                android:background="#99ffffff"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/fragmentAreaLivingRoom"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="16dp">
            <ImageView
                android:src="@drawable/img_livingroon"
                android:scaleType="centerCrop"
                android:layout_width="128dp"
                android:layout_height="160dp" />
            <TextView
                android:textSize="16sp"
                android:text="客厅"
                android:textColor="#000000"
                android:background="#99ffffff"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/fragmentAreaStair"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="16dp">
            <ImageView
                android:src="@drawable/img_stair"
                android:scaleType="centerCrop"
                android:layout_width="128dp"
                android:layout_height="160dp" />
            <TextView
                android:textSize="16sp"
                android:text="楼道"
                android:textColor="#000000"
                android:background="#99ffffff"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/fragmentAreaKitchen"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="16dp">
            <ImageView
                android:src="@drawable/img_kitchen"
                android:scaleType="centerCrop"
                android:layout_width="128dp"
                android:layout_height="160dp" />
            <TextView
                android:textSize="16sp"
                android:text="厨房"
                android:textColor="#000000"
                android:background="#99ffffff"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="bottom|center"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </GridLayout>

</FrameLayout>